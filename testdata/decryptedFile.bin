SHELL := /bin/bash

# ==============================================================================
# Local support

run-encrypt:
	go run app/tle/main.go -n="http://pl-us.testnet.drand.sh/" -c="cc9c398442737cbd141526600919edd69f1d6f9b4adb67e4d912fbc64341a9a5" -D=30s -o=encryptedFile makefile

run-decrypt:
	go run app/tle/main.go -d -n="http://pl-us.testnet.drand.sh/" -o=decryptedFile encryptedFile

run-encrypt-a:
	go run app/tle/main.go -a -n="http://pl-us.testnet.drand.sh/" -c="cc9c398442737cbd141526600919edd69f1d6f9b4adb67e4d912fbc64341a9a5" -D=30s -o=encryptedArmor.pem makefile

run-decrypt-a:
	go run app/tle/main.go -d -n="http://pl-us.testnet.drand.sh/" -o=decryptedArmor.pem encryptedArmor.pem


# ==============================================================================
# Modules support

tidy:
	go mod tidy
	go mod vendor

deps-upgrade:
	go get -u -v ./...
	go mod tidy
	go mod vendor
